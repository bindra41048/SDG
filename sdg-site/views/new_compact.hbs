  <div class="content-wrapper ">
      <div class="container-fluid" >
        <div class = "card mb-3">
          <div class = "card-header">
            {{#if newCompact}}
              Create New Compact
            {{/if}}
            {{#if editCompact}}
              Edit Compact
            {{/if}}
          </div>

          <div class = "card-body">
            <form method="post">
              <div class = "form row">
                <div class = "form-group col-md-6">
                  <label for = "inputIndicator">Indicator Name:</label>
                  <input type="text" class = "form-control" id="inputIndicator" name="indicator" value="{{compact.indicator}}"/>
                </div>

                <div class = "form-group col-md-6">
                  <label for= "inputLocation">Location:</label>
                  <input type="text" class = "form-control" id="inputLocation" name="location" value="{{compact.location}}"/>
                </div>
              </div>

              <div class = "form-group">
                <label for = "inputMetric">Action:</label>
                <input type="text" class = "form-control" id= "inputMetric" name="metric" value="{{compact.metric}}"/>
              </div>

              <div class = "form-group">
                <label for = "inputMetric">Target Amount:</label>
                <input type="text" class = "form-control" id= "inputAmount" name="amount" value="{{compact.amount}}"/>
              </div>

              <div class = "form-group">
                <label for = "inputMetric">Target Year:</label>
                <input type="text" class = "form-control" id= "inputYear" name="year" value="{{compact.year}}"/>
              </div>

              <div class = "form-group">
                <label for = "milestones">Milestone(s):</label>
                <div class = "form-inline">
                  <div id = "milestone-inputs">
                    <div class = "form-inline mb-2" id = "to-be-appended">
                      <div class = "form-group mr-3">
                        <label for = "inputYear">Year:</label>
                        <input type="text" class = "form-control ml-2" id = "inputYear" value="{{compact.milestones}}"/>
                      </div>
                      <div class = "form-group mr-3">
                        <label for = "inputTarget ">Target:</label>
                        <input type="text" class = "form-control ml-2" id = "inputTarget"/>
                      </div>
                    </div>
                  </div>
                  <div class = "form-group mr-3" id = "add-button">
                    <label for = "addRow"> </label>
                    <button type="button" class="btn btn-link">+Add another milestone</button>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary active">
                <i class="fas fa-plus-square"></i> Submit
              </button>
            </form>
          </div>



          <div class = "card-footer ">
            <a class="btn btn-link btn-sm float-right" href="/compacts/view">Back to All Compacts</button>

          </div>



        </div>

      </div>



  </div>



